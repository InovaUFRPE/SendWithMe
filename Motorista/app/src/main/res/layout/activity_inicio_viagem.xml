<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/laranja"
    tools:context=".Activity.Viagens.InicioViagem">

    <Button
        android:id="@+id/Btnavanc"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_style"
        android:drawableRight="@drawable/avancar"
        android:paddingRight="16dp"
        android:text="Avançar"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@+id/dataano"
        app:layout_constraintTop_toBottomOf="@+id/exemp" />

    <Button
        android:id="@+id/Btnvolt"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_style"
        android:drawableLeft="@drawable/voltar"
        android:paddingLeft="16dp"
        android:text="Voltar"
        android:textColor="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="@+id/datahora"
        app:layout_constraintTop_toBottomOf="@+id/exemp" />

    <EditText
        android:id="@+id/Edtcity"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/edit_text_style"
        android:ems="10"
        android:hint="@string/cidade"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Txtpass" />

    <EditText
        android:id="@+id/Edtend"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/edit_text_style"
        android:ems="10"
        android:hint="@string/endereço"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Edtcity" />

    <EditText
        android:id="@+id/datadia"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_style"
        android:ems="10"
        android:hint="@string/dia"
        android:inputType="number"
        android:maxLength="2"
        app:layout_constraintStart_toStartOf="@+id/Edtend"
        app:layout_constraintTop_toBottomOf="@+id/Edtend" />

    <EditText
        android:id="@+id/datames"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/edit_text_style"
        android:ems="10"
        android:hint="@string/mes"
        android:inputType="number"
        android:maxLength="2"
        app:layout_constraintEnd_toStartOf="@+id/dataano"
        app:layout_constraintStart_toEndOf="@+id/datadia"
        app:layout_constraintTop_toBottomOf="@+id/Edtend" />

    <EditText
        android:id="@+id/dataano"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_style"
        android:ems="10"
        android:hint="@string/ano"
        android:inputType="number"
        android:maxLength="4"
        app:layout_constraintEnd_toEndOf="@+id/Edtend"
        app:layout_constraintTop_toBottomOf="@+id/Edtend" />

    <EditText
        android:id="@+id/datamin"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_style"
        android:ems="10"
        android:hint="@string/minuto"
        android:inputType="time"
        android:maxLength="2"
        app:layout_constraintStart_toEndOf="@+id/datahora"
        app:layout_constraintTop_toBottomOf="@+id/exemp1" />

    <EditText
        android:id="@+id/datahora"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_style"
        android:ems="10"
        android:hint="@string/hora"
        android:inputType="time"
        android:maxLength="2"
        app:layout_constraintStart_toStartOf="@+id/datadia"
        app:layout_constraintTop_toBottomOf="@+id/exemp1" />

    <TextView
        android:id="@+id/Txtpass"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="Onde será o início da viagem?"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/exemp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Ex:  01  /  04  /  2019"
        android:textColor="@color/common_google_signin_btn_text_light_focused"
        app:layout_constraintStart_toStartOf="@+id/datadia"
        app:layout_constraintTop_toBottomOf="@+id/datadia" />

    <TextView
        android:id="@+id/exemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Ex:  19  :  45"
        android:textColor="@color/common_google_signin_btn_text_light_focused"
        app:layout_constraintStart_toStartOf="@+id/datahora"
        app:layout_constraintTop_toBottomOf="@+id/datahora" />


</android.support.constraint.ConstraintLayout>